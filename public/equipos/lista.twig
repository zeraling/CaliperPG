{% extends "pageMaster.twig" %}
{% block style_plugin %}
    <!-- Select2 --> 
    <link rel="stylesheet" href="{{ 'plugins/select2/select2.min.css'|baseUrl}}" />
{% endblock %}
{% block content %}
    <div class="page-content">
        <div class="row">
            <div id="datosInfo"></div>
            <div class="col-xs-12 col-sm-4 widget-container-col">
                <div class="widget-box widget-color-blue2">
                    <div class="widget-header">
                        <h5 class="widget-title">Opciones</h5>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-sm-4 control-label ">
                                        <label class="label label-primary">Tipo:</label>
                                    </div>
                                    <div class="col-sm-7">
                                        <select id="IdTipoEquipo" name="IdTipoEquipo" class=" form-control">
                                            {%if listTipos %}
                                                <option value=""></option>
                                                {% for tipos in listTipos %}
                                                    <option value="{{tipos.id}}">{{tipos.nombre}}</option>
                                                {%endfor%}
                                            {%else%}
                                                <option value=""></option>
                                            {%endif%}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">
                                        <span class="label label-primary">Marca:</span>
                                    </label>
                                    <div class="col-sm-7">
                                        <select id="CodMarca" name="CodMarca"class="form-control">
                                            {%if listMarcas %}
                                                <option value=""></option>
                                                {% for marcas in listMarcas %}
                                                    <option value="{{marcas.codigo}}">{{marcas.nombre}}</option>
                                                {%endfor%}
                                            {%else%}
                                                <option value=""></option>
                                            {%endif%}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">
                                        <span class="label label-primary">Modelo:</span>
                                    </label>
                                    <div class="col-sm-7">
                                        <input type="text" id="Modelo" name="Modelo" placeholder="Modelo" class="form-control" />
                                    </div>
                                </div>
                            </div>      
                        </div>
                        <div class="widget-toolbox padding-8 clearfix">
                            <button id="Consulta" class="btn btn-xs btn-success pull-right">
                                <span class="bigger-110">Buscar</span> <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                            </button>
                            <img id="AccionLoad" class="hide" src="{{'template/loaders/bar120.gif'|baseUrl}}">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-8 widget-container-col">
                <div class="widget-box widget-color-green2">
                    <div class="widget-header">
                        <h5 class="widget-title">Equipos Calibracion</h5>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="row">
                                <div class="pull-left">
                                    <div class="btn-group">
                                        <button data-toggle="dropdown" class="btn btn-success btn-sm dropdown-toggle" aria-expanded="false">
                                            Opciones <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-success">  
                                            <li><a id="Nuevo" ><i class="fa fa-plus"></i> Registrar </a></li>
                                            <li><a id="Editar"><i class="fa fa-edit"></i> Actualizar</a></li>  
                                        </ul>
                                    </div>
                                    <div class="btn-group">
                                       <button type="button" id="opMarcas" class="btn btn-inverse btn-sm" >
                                            <i class="fa fa-database"></i> MARCAS
                                        </button>
                                    </div>
                                </div>
                                <div class="pull-right">
                                    <div class="btn-group mr10">
                                        <button class="btn btn-white btn-info btn-sm" id="Ver" type="button"><i class="fa fa-info"></i></button>  
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <table id="listaEquipos" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Equipo</th>
                                            <th>Marca</th>
                                            <th>Modelo</th>
                                            <th>Serie</th>
                                        </tr>
                                    </thead> 
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div id="infoModal1" style="display: none;background-color: rgba(255, 255, 255, 0.219608);"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.page-content -->
{% endblock %}
{% block js_custom %}
    <!-- Select2 --> 
    <script type="text/javascript" src="{{ 'plugins/select2/select2.min.js'|baseUrl}}"></script>
    <!-- DataTables -->
    <script type="text/javascript" src="{{'template/jquery/jquery.dataTables.min.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{'template/jquery/jquery.dataTables.bootstrap.min.js'|baseUrl}}"></script> 
    <!-- Custom -->
    <script type="text/javascript" src="{{'application/scripts/equipos/lista.js'|baseUrl}}"></script>
{% endblock %}