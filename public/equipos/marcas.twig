{% extends "pageMaster.twig" %}
{% block style_plugin %}

{% endblock %}
{% block content %}
    <div class="page-content">
        <div class="row">
            <div id="datosInfo"></div>
            <div class=" col-xs-12 col-sm-10">
                <div class="info-box">
                    <span class="info-box-icon"><i class="fa fa-bookmark-o"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text"><b>Marcas</b></span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                            Aqui se muentra un listado de las marcas de los diferentes equipos medicos usados en este sistema!
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <div class="col-sm-5 widget-container-col">
                <div class="widget-box widget-color-green2">
                    <div class="widget-header">
                        <h5 class="widget-title">LISTADO DE MARCAS</h5>
                        <div class="widget-toolbar">
                            <a id="agregarMarca" href="#" class="">
                                <i class="ace-icon fa fa-plus-circle"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <table id="listaMarcas" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Nombre</th>
                                        <th>Opcion</th>
                                    </tr>
                                </thead> 
                                <tbody>
                                    {%if listMarcas %}
                                        {%for marcas in listMarcas %}
                                            <tr>
                                                <td class="center" style="width: 100px">{{marcas.codigo}}</td>
                                                <td>{{marcas.nombre}}</th>
                                                <td class="center">
                                                    <a data="{{marcas.codigo}}" class="label label-primary arrowed-in-right arrowed-in clsUpda"><i class="fa fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        {%endfor%}
                                    {%endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div id="formOpciones" class="col-sm-5 widget-container-col hide">
                <form  id="regMarca" method="POST" name="regMarca"  autocomplete="off">
                    <div class="widget-box widget-color-dark">
                        <div class="widget-header">
                            <h5 class="widget-title">Opciones</h5>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <input type="hidden" name="Codigo" id="Codigo" {{codigo|raw}}/>
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-sm-4 control-label">
                                            <label class="label label-important">Nombres:</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <span></span>
                                            <input type="text" id="Nombre" name="Nombre" placeholder="Nombre" onkeypress="return gearsPage.soloLetras(event)" onkeyup="this.value=this.value.toUpperCase()" class="{required:true,minlength:3,messages:{required:'* Favor digite un Nombre'}} form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="widget-toolbox padding-8 clearfix">
                                <div class="row">
                                    <div class="col-sm-9 col-sm-offset-3">
                                        <button type="submit" class="btn btn-success">Guardar</button>
                                        <button id="btnCancel" type="button" class="btn btn-default">Cancelar</button> 
                                    </div>
                                </div>
                                <img id="AccionLoad" class="hide" src="{{'template/images/loaders/bar120.gif'|baseUrl}}">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div><!-- /.page-content -->
{% endblock %}
{% block js_custom %}
    <!-- Validate --> 
    <script type="text/javascript" src="{{ 'plugins/jquery-validate/dist/jquery.validate.min.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{ 'plugins/jquery-validate/lib/jquery.metadata.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{ 'plugins/jquery-validate/localization/messages_es.js'|baseUrl}}"></script> 
    <!-- DataTables -->
    <script type="text/javascript" src="{{'template/jquery/jquery.dataTables.min.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{'template/jquery/jquery.dataTables.bootstrap.min.js'|baseUrl}}"></script>
    <!-- Custom -->
    <script type="text/javascript" src="{{'application/scripts/equipos/marcas.js'|baseUrl}}"></script>
{% endblock %}