{% extends "pageMaster.twig" %}
{% block style_plugin %}

{% endblock %}
{% block content %}
    <div class="page-content">
        <div class="row">
            <div id="datosInfo"></div>
            <div class="col-sm-5 widget-container-col">
                <div class="widget-box widget-color-green2">
                    <div class="widget-header">
                        <h5 class="widget-title">PARAMETROS</h5>
                        <div class="widget-toolbar">
                            <a id="agregarParametro" href="#" class="">
                                <i class="ace-icon fa fa-database"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <table id="listaParametros" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Nombre</th>
                                        <th>Opcion</th>
                                    </tr>
                                </thead> 
                                <tbody>
                                    {%if listParametros %}
                                        {%for parametros in listParametros %}
                                            <tr>
                                                <td class="center" style="width: 100px">{{parametros.id}}</td>
                                                <td>{{parametros.nombre}}</th>
                                                <td class="center">
                                                    <a data="{{parametros.id}}" class="label label-primary arrowed-in-right arrowed-in clsUpda"><i class="fa fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        {%endfor%}
                                    {%endif %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div id="formOpciones" class="col-sm-5 widget-container-col hide">
                <form  id="regParametros" method="POST" name="regParametros">
                    <div class="widget-box widget-color-dark">
                        <div class="widget-header">
                            <h5 class="widget-title">Opciones</h5>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <input type="hidden" name="Codigo" id="Codigo" {{codigo|raw}}/>
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-sm-4 control-label">
                                            <label class="label label-important">Nombres:</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <span></span>
                                            <input type="text" id="Nombre" name="Nombre" placeholder="Nombre" onkeypress="return gearsPage.soloLetras(event)" onkeyup="this.value=this.value.toUpperCase()" class="{required:true,minlength:3,messages:{required:'* Favor digite un Nombre'}} form-control" {{nombres|raw}}>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="widget-toolbox padding-8 clearfix">
                                <div class="row">
                                    <div class="col-sm-9 col-sm-offset-3">
                                        <button type="submit" class="btn btn-success">Guardar</button>
                                        <button id="btnVolver" type="button" class="btn btn-default">Volver</button> 
                                    </div>
                                </div>
                                <img id="AccionLoad" class="hide" src="{{'template/images/loaders/bar120.gif'|baseUrl}}">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div><!-- /.page-content -->
{% endblock %}
{# <img id="AccionLoad" class="hide" src="{{'template/loaders/bar120.gif'|baseUrl}}">  #}
{% block js_custom %}
    <!-- Validate --> 
    <script type="text/javascript" src="{{ 'plugins/jquery-validate/dist/jquery.validate.min.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{ 'plugins/jquery-validate/lib/jquery.metadata.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{ 'plugins/jquery-validate/localization/messages_es.js'|baseUrl}}"></script> 
    <!-- DataTables -->
    <script type="text/javascript" src="{{'template/jquery/jquery.dataTables.min.js'|baseUrl}}"></script>
    <script type="text/javascript" src="{{'template/jquery/jquery.dataTables.bootstrap.min.js'|baseUrl}}"></script>
    <!-- Custom -->
    <script type="text/javascript" src="{{'application/scripts/parametros/admin.js'|baseUrl}}"></script>
{% endblock %}